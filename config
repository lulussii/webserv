# /project/webserv/ -> /goinfre/REPO_NAME

server {
	listen 127.0.0.1:8081;

	server_name example ;
GET /home/fcretin/project/webserv/server_files/ HTTP/1.1
	root /home/fcretin/project/webserv/server_files;

	# Pages d'erreur personnalisées :
	error_page 404 /404.html;

	# index index.html; # Fichier par défaut si une requête est un répertoire

	client_max_body_size 1000000;

	allow_methods GET POST; # Méthodes HTTP acceptées
	autoindex on;

	location /newsite {
		allow_methods POST; # Méthodes HTTP acceptées
	}


	location /shortcut {
		root /home/fcretin/project/webserv/server_files/file2/nn/jj;
	}

	location /load {
		return 301 https://www.nginx.com;
	}

	location = / {
		# error_page 404 /404.html;
		allow_methods GET POST DELETE; # Méthodes HTTP acceptées
	}

	location / {
		# error_page 404 /404.html;
		allow_methods GET POST DELETE; # Méthodes HTTP acceptées
	}

	location /cgi/cgi-python {

		cgi_extension .py;
		cgi_path .py:/usr/bin/python3;
	}

	location /cgi/cgi-bash {

		cgi_extension .sh;
		cgi_path .sh:/bin/bash;
	}

}